{
  "name": "@ember-learn/cli-guides",
  "version": "0.0.3",
  "description": "Markdown files for Ember-Cli Guides",
  "bugs": {
    "url": "https://github.com/ember-learn/cli-guides-source/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ember-learn/cli-guides-source.git"
  },
  "license": "MIT",
  "author": "Jen Weber",
  "scripts": {
    "lint:md": "remark .",
    "lint:alex": "alex .",
    "release": "np",
    "test": "mocha",
    "test-watch": "npm test -- -w"
  },
  "devDependencies": {
    "alex": "^6.0.0",
    "eslint": "^5.6.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "guidemaker-link-checker": "^1.0.0",
    "mocha": "^5.0.0",
    "np": "*",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.2",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-recommended": "^3.0.2"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-lint-recommended",
      "remark-preset-lint-consistent",
      [
        "remark-lint-list-item-indent",
        "space"
      ]
    ]
  }
}
